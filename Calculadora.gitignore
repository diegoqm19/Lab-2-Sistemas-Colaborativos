    private void CalcularResultado(String operandoUno, 
                                   String operandoDos, 
                                   String operador) {
        Float FloatOperandoUno = Float.parseFloat(operandoUno);
        Float FloatOperandoDos = Float.parseFloat(operandoDos);
        double resultado = 0;
        String strResultado;
        if (operador == "+")
            resultado = FloatOperandoUno + FloatOperandoDos;
        if (operador == "-")
            resultado = FloatOperandoUno - FloatOperandoDos;
        if (operador == "*")
            resultado = FloatOperandoUno * FloatOperandoDos;
        if (operador == "/")
            resultado = FloatOperandoUno / FloatOperandoDos;      
        if(Math.round(FloatOperandoDos)==0 && operador == "/")
             strResultado= "DIVISION POR CERO";
        else
            strResultado = String.valueOf(resultado);
        Resultado.setText(strResultado);
    }
